{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@api/*": ["src/api/*"],
      "@common": ["src/common"],
      "@lib/*": ["src/lib/*"],
      "@schema": ["src/schemas"],
      "@repositories": ["src/repositories"],
      "@entities": ["src/entities"]
    }
  }
}
